fun main() {
    
   val cor ="Rosa"
	
    var mensagem = when(cor){
        "Vermelho" -> "A cor do cavalo de Napoleão, não é vermelho e sim branco!"
        "Azul" -> "A cor do cavalo de Napoleão, não é azul e sim branco!"
        "Branco" -> "Acertou, a cor do cavalo de Napoleão é branco!"
        else -> "Sem cor !"
    }
    
    println("$mensagem")

}
